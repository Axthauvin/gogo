{
  "manifest_version": 3,
  "name": "Gogo - Local URL Shortener",
  "author": "Axel Thauvin",
  "version": "1.0",
  "description": "Local url shortener to go faster on the internet.",
  "permissions": ["tabs", "webNavigation", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Gogo - Local URL Shortener",
    "default_icon": {
      "16": "src/icons/favicon-16x16.png",
      "48": "src/icons/favicon-48x48.png",
      "128": "src/icons/favicon-128x128.png"
    }
  },
  "omnibox": { "keyword": "go" },
  "options_page": "src/settings.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "src/icons/favicon-16x16.png",
    "48": "src/icons/favicon-48x48.png",
    "128": "src/icons/favicon-128x128.png"
  }
}
